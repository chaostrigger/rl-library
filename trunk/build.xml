<project name="RL-Library" basedir="." >

<target name="mountainCar" description="Build Java MountainCar Jar" >
   <ant antfile="build.xml" dir="environments/mountainCar" inheritAll="false" target="all"/>
</target>

<target name="tetris" description="Build Java tetris Jar" >
   <ant antfile="build.xml" dir="environments/tetris" inheritAll="false" target="all"/>
</target>

<target name="randomAgent" description="Build Java Random Agent Jar" >
   <ant antfile="build.xml" dir="agents/randomAgentJava" inheritAll="false" target="all"/>
</target>



<target name="all" description="Build all environments and rl-glue" depends="mountainCar,randomAgent,tetris,rl-glue">
</target>	

<target name="rl-glue" description="Build RL-Glue executable">
	  <exec executable="make" dir="system/rl-glue">
		<arg value="rl-glue"/>
	</exec>
</target>

<target name="clean" description="Clean everything">
   <ant antfile="build.xml" dir="environments/mountainCar" inheritAll="false" target="clean"/>
   <ant antfile="build.xml" dir="environments/tetris" inheritAll="false" target="clean"/>
   <ant antfile="build.xml" dir="agents/randomAgentJava" inheritAll="false" target="clean"/>

	  <exec executable="make" dir="system/rl-glue">
		<arg value="clean"/>
	</exec>
</target>

</project>